@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>Balzor_PR</PageTitle>
@code {
    private bool IsLoginPage => NavigationManager.Uri.Contains("/login");
}

<div class="row  ">
    @if (!IsLoginPage)
    {
        <div class="col-12">
            <NavMenu />
        </div>
    }
    <div class="col-12 " style="height:80vh">
        <main style="height:100vh" class="d-flex justify-content-center align-items-center">
            @Body
        </main>
    </div>
    @if (!IsLoginPage)
    {
        <div class="col-12">
            <Footer />
        </div>
    }
</div>
